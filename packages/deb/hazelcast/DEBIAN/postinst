#!/bin/sh

for FILENAME in /usr/lib/hazelcast/${HZ_DISTRIBUTION}-${HZ_VERSION}/bin/hz*; do
  case "${FILENAME}" in
    *bat)
      ;;
    *)
      ln -s "${FILENAME}" /usr/bin/"$(basename "${FILENAME}")"
      ;;
  esac
done

printf "\n\nHazelcast is successfully installed to '/usr/lib/hazelcast/${HZ_DISTRIBUTION}-${HZ_VERSION}/'\n"
